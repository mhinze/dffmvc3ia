@{Layout = null;}
@using Validation.Controllers
@using Validation.Models
@model IEnumerable<FunctionalTestModel>

<html>
  <head>
    <link href='@Url.Content("~/Scripts/funcunit/qunit/qunit.css")' type='text/css' rel='stylesheet' />
    <script src='@Url.Content("~/Scripts/funcunit/funcunit.js")' type='text/javascript'></script>
    <script src='@Url.Content("~/Scripts/funcunit/tests/tests.js")' type='text/javascript'></script>
               
    @foreach (var test in Model)
    {
        @Html.Partial(test.TestName, test)
    }

    <title>Functional Test Runner</title>
  </head>
  <body>
    <h1 id="qunit-header">Functional Test Runner</h1>
    <h2 id="qunit-banner"></h2>
    <div id="qunit-testrunner-toolbar"></div>
    <h2 id="qunit-userAgent"></h2>
    <ol id="qunit-tests"></ol>
  </body>
</html>